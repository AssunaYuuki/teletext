      position: relative;
      overflow: hidden;
    }

    .edit-container::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(135deg, rgba(0, 255, 153, 0.03) 0%, rgba(0, 255, 153, 0.01) 100%);
      pointer-events: none;
    }

    .edit-container > * {
