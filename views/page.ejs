<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>–°—Ç—Ä. <%= pageNumber %> ‚Äî <%= folderName %></title>
  <link rel="stylesheet" href="/global.css">
  <base href="<%= basePath %>">
  <style>
    .page-container {
      display: flex;
      justify-content: center;
      align-items: flex-start;
      min-height: 100vh;
      padding: 20px 0;
      background: var(--bg);
      color: var(--fg);
      font-family: var(--font-mono);
    }

    .content-wrapper {
      width: 100%;
      max-width: 820px;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .teletext-frame {
      position: relative;
      background: #000;
      border: 2px solid #00ff88;
      border-radius: 6px;
      padding: 16px;
      box-shadow: 0 0 15px rgba(0, 255, 136, 0.3),
                  inset 0 0 8px rgba(0, 60, 30, 0.8);
      overflow: hidden;
      min-width: 800px;
      margin: 0 auto;
      font-family: 'Courier New', monospace;
      line-height: 1.3;
      color: #a0d9a0;
      font-size: 0.95rem;
    }

    .teletext-frame * {
      max-width: 100% !important;
      height: auto !important;
      word-wrap: break-word;
      overflow-wrap: break-word;
      box-sizing: border-box;
    }

    .teletext-frame > *:first-child { margin-top: 0 !important; }
    .teletext-frame > *:last-child { margin-bottom: 0 !important; }

    .thumbs-grid {
      background: var(--card-bg);
      border: 1px solid var(--accent);
      border-radius: 4px;
      padding: 15px;
      box-shadow: 0 0 10px var(--shadow);
    }

    .thumbs-grid h3 {
      color: var(--accent);
      margin-bottom: 10px;
      display: flex;
      align-items: center;
      gap: 8px;
      text-shadow: 0 0 5px rgba(0, 255, 136, 0.4);
    }

    .thumbs-grid .grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
      gap: 8px;
    }

    .thumbs-grid .thumb-item {
      position: relative;
      border: 1px solid var(--accent);
      border-radius: 4px;
      overflow: hidden;
      transition: all 0.2s ease;
      background: var(--hover-bg);
      height: 140px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .thumbs-grid .thumb-item:hover {
      transform: scale(1.05);
      z-index: 10;
      box-shadow: 0 0 10px var(--shadow);
    }

    .thumbs-grid .thumb-item img {
      width: 100%;
      height: 100px;
      object-fit: cover;
      display: block;
    }

    .thumbs-grid .thumb-item span {
      display: block;
      text-align: center;
      color: var(--accent);
      font-size: 0.9rem;
      padding: 4px;
      background: var(--card-bg);
      font-weight: bold;
    }

    .nav-bar button, .nav-bar .btn-list {
      margin: 0 4px;
      padding: 6px 12px;
      background: var(--card-bg);
      border: 1px solid var(--accent);
      color: var(--accent);
      font-family: var(--font-mono);
      cursor: pointer;
    }

    .nav-bar button:disabled {
      opacity: 0.4;
      cursor: not-allowed;
    }

    .nav-bar input {
      width: 60px;
      text-align: center;
      padding: 4px;
      background: var(--hover-bg);
      border: 1px solid var(--accent);
      color: var(--fg);
      font-family: var(--font-mono);
    }
  </style>
</head>
<body>

  <!-- –ù–∞–≤–∏–≥–∞—Ü–∏—è -->
  <header class="nav-bar">
    <div class="breadcrumb">
      <a href="/">üè†</a>
      <% if (breadcrumb && breadcrumb.length > 0) { %>
        <% breadcrumb.forEach((crumb, i) => { %>
          <% if (i === breadcrumb.length - 1) { %>
            <span> ‚Üí <%= crumb.name %></span>
          <% } else { %>
            <a href="/folder/<%= crumb.path %>"> ‚Üí <%= crumb.name %></a>
          <% } %>
        <% }) %>
      <% } %>
    </div>

    <h2>
      <% if (hasLogo) { %>
        <img id="header-logo" src="<%= logoUrl %>?t=<%= Date.now() %>" alt="–õ–æ–≥–æ—Ç–∏–ø" style="height:32px;vertical-align:middle;margin-right:8px;">
      <% } %>
      <%= folderName %> ‚Äî –°—Ç—Ä. <span id="current-page"><%= pageNumber %></span>
    </h2>

    <div style="margin-top: 8px;">
      <button id="prev" title="–ü—Ä–µ–¥—ã–¥—É—â–∞—è (‚Üê)" <%= prevPage === null ? 'disabled' : '' %>>‚óÑ</button>
      <input type="number" id="jump" min="100" max="999" value="<%= pageNumber %>" size="3">
      <button id="next" title="–°–ª–µ–¥—É—é—â–∞—è (‚Üí)" <%= nextPage === null ? 'disabled' : '' %>>‚ñ∫</button>
      <a href="/folder/<%= currentPath %>" class="btn-list" style="display:inline-block; padding:6px 12px;">üìÅ –°–ø–∏—Å–æ–∫</a>
    </div>
  </header>

  <!-- –¶–µ–Ω—Ç—Ä–∞–ª—å–Ω—ã–π –∫–æ–Ω—Ç–µ–Ω—Ç -->
  <div class="page-container">
    <div class="content-wrapper">
      <div class="teletext-frame">
        <%- content %>
      </div>

      <div class="thumbs-grid">
        <h3>üñºÔ∏è –°—Ç—Ä–∞–Ω–∏—Ü—ã</h3>
        <div class="grid">
          <% pageList.forEach(item => { %>
            <a
              href="/page/<%= currentPath %>/<%= item.page %>"
              class="thumb-item <%= item.page === pageNumber ? 'active' : '' %>">
               <% if (item.hasThumb) { %>
                                <img src="<%= `/teletext/${currentPath}/${item.page}.png` %>?t=<%= Date.now() %>" alt="–°—Ç—Ä. <%= item.page %>" loading="lazy" style="width:100%; height:80px; object-fit:cover; border-radius:3px;">
                              <% } else { %>
                                <div style="height:80px; width:100%; background:#0a220a; display:flex; align-items:center; justify-content:center; color:#00ff88; font-size:1.1rem; font-weight:bold;">
                                  <%= item.page %>
                                </div>
                              <% } %>
              <span><%= item.page %></span>
            </a>
          <% }) %>
        </div>
      </div>
    </div>
  </div>

  <script>
    const currentPath = `<%= currentPath %>`;
    const currentPageNum = <%= pageNumber %>;
    const prevPageNum = <%= prevPage !== null ? prevPage : 'null' %>;
    const nextPageNum = <%= nextPage !== null ? nextPage : 'null' %>;
    const allPageNumbers = [<%= pageList.map(p => p.page).join(',') %>];

    function goToPage(num) {
      if (num === null || !allPageNumbers.includes(num)) return;
      const encodedPath = currentPath ? encodeURIComponent(currentPath) : '';
      window.location.href = `/page/${encodedPath}/${num}`;
    }

    document.getElementById('prev').onclick = () => goToPage(prevPageNum);
    document.getElementById('next').onclick = () => goToPage(nextPageNum);

    document.getElementById('jump').onchange = (e) => {
      const num = parseInt(e.target.value);
      if (allPageNumbers.includes(num)) {
        goToPage(num);
      } else {
        alert(`–°—Ç—Ä–∞–Ω–∏—Ü–∞ ${num} –æ—Ç—Å—É—Ç—Å—Ç–≤—É–µ—Ç.\n–î–æ—Å—Ç—É–ø–Ω—ã–µ: ${allPageNumbers.join(', ')}`);
        e.target.value = currentPageNum;
      }
    };

    document.addEventListener('keydown', e => {
      if (e.key === 'ArrowLeft' && prevPageNum !== null) goToPage(prevPageNum);
      else if (e.key === 'ArrowRight' && nextPageNum !== null) goToPage(nextPageNum);
      else if (e.key === 'Home' && allPageNumbers.length > 0) goToPage(allPageNumbers[0]);
      else if (e.key === 'End' && allPageNumbers.length > 0) goToPage(allPageNumbers[allPageNumbers.length - 1]);
    });

    // ‚úÖ –ò—Å–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –≥–∏–ø–µ—Ä—Å—Å—ã–ª–æ–∫ –≤–Ω—É—Ç—Ä–∏ —Ç–µ–ª–µ—Ç–µ–∫—Å—Ç–∞
    document.addEventListener('DOMContentLoaded', () => {
        const frame = document.querySelector('.teletext-frame');
        if (frame) {
            // –ù–∞—Ö–æ–¥–∏–º –≤—Å–µ —Å—Å—ã–ª–∫–∏ –≤–Ω—É—Ç—Ä–∏ —Ñ—Ä–µ–π–º–∞
            const links = frame.querySelectorAll('a[href]');
            links.forEach(link => {
                const href = link.getAttribute('href');
                // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —è–≤–ª—è–µ—Ç—Å—è –ª–∏ href .html —Ñ–∞–π–ª–æ–º –≤ —Ç–µ–∫—É—â–µ–º –∫–∞—Ç–∞–ª–æ–≥–µ
                if (href && href.endsWith('.html')) {
                    // –ò–∑–≤–ª–µ–∫–∞–µ–º –Ω–æ–º–µ—Ä —Å—Ç—Ä–∞–Ω–∏—Ü—ã –∏–∑ href
                    const match = href.match(/(\d+)\.html$/);
                    if (match) {
                        const pageNum = match[1];
                        // –ú–µ–Ω—è–µ–º href –Ω–∞ –≤–Ω—É—Ç—Ä–µ–Ω–Ω–∏–π –º–∞—Ä—à—Ä—É—Ç
                        link.href = `/page/${encodeURIComponent(currentPath)}/${pageNum}`;
                        // –î–æ–±–∞–≤–ª—è–µ–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫, —á—Ç–æ–±—ã –Ω–µ –æ—Ç–∫—Ä—ã–≤–∞—Ç—å –≤ –Ω–æ–≤–æ–º –æ–∫–Ω–µ
                        link.addEventListener('click', (e) => {
                            e.preventDefault();
                            window.location.href = link.href;
                        });
                    }
                }
            });
        }
    });


  </script>



</body>
</html>